<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SignInActivity"
    android:background="@color/lightblack">

    <TextView
        android:id="@+id/tvlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:fontFamily="@font/notosans"
        android:layout_marginTop="72dp"
        android:layout_marginLeft="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/etId"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:hint="아이디"
        android:textColor="@color/white"
        android:textColorHint="#ABABAB"
        android:backgroundTint="#ABABAB"
        android:textCursorDrawable="@color/white"
        android:maxLines="1"
        android:maxLength="12"
        android:singleLine="true"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@id/tvlogin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/etPw"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        android:textColor="@color/white"
        android:textColorHint="#ABABAB"
        android:backgroundTint="#ABABAB"
        android:textCursorDrawable="@color/white"
        android:maxLines="1"
        android:singleLine="true"
        android:inputType="textPassword"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etId"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/ivvisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_baseline_visibility_off_24"
        app:layout_constraintBottom_toBottomOf="@id/etPw"
        app:layout_constraintRight_toRightOf="@id/etPw"/>

    <CheckBox
        android:id="@+id/cbautlLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/etPw"
        app:layout_constraintTop_toBottomOf="@id/etPw"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="로그인 유지"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/cbautlLogin"
        app:layout_constraintLeft_toRightOf="@id/cbautlLogin"
        app:layout_constraintBottom_toBottomOf="@id/cbautlLogin" />

    <Button
        android:id="@+id/btLogin"
        android:layout_width="300dp"
        android:layout_height="54dp"
        android:background="@drawable/btradius"
        android:text="로그인"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tvRegister"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계정이 없으시다면? 회원가입하기"
        android:textColor="@color/white"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>