<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="316dp"
    android:layout_height="752dp"
    android:background="#000000"
    tools:context=".Activity.DialogActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="316dp"
        android:layout_height="752dp"
        android:backgroundTint="#606060"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cardCornerRadius="160dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/cmdblack"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/ivno"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/no"
                android:layout_margin="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/tvname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:fontFamily="@font/notosans"
                android:layout_marginTop="-8dp"
                app:layout_constraintTop_toBottomOf="@id/cardview"
                app:layout_constraintLeft_toLeftOf="@id/cardview"
                app:layout_constraintRight_toRightOf="@id/cardview"/>

            <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원정보"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/notosans"
                android:layout_marginLeft="32dp"
                app:layout_constraintTop_toBottomOf="@id/tvname"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:fontFamily="@font/notosanslight"
                app:layout_constraintTop_toBottomOf="@id/textview"
                app:layout_constraintLeft_toLeftOf="@id/textview"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@id/textview2"
                app:layout_constraintLeft_toLeftOf="@id/tvname"
                app:layout_constraintBottom_toBottomOf="@id/textview2" />

            <TextView
                android:id="@+id/textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학번"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:fontFamily="@font/notosanslight"
                app:layout_constraintTop_toBottomOf="@id/textview2"
                app:layout_constraintLeft_toLeftOf="@id/textview2"/>

            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@id/textview3"
                app:layout_constraintLeft_toLeftOf="@id/tvName"
                app:layout_constraintBottom_toBottomOf="@id/textview3" />

            <TextView
                android:id="@+id/textview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:fontFamily="@font/notosanslight"
                app:layout_constraintTop_toBottomOf="@id/textview3"
                app:layout_constraintLeft_toLeftOf="@id/textview"/>

            <TextView
                android:id="@+id/tvBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@id/textview4"
                app:layout_constraintLeft_toLeftOf="@id/tvNumber"
                app:layout_constraintBottom_toBottomOf="@id/textview4" />

            <TextView
                android:id="@+id/textview5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전공 분야"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:fontFamily="@font/notosanslight"
                app:layout_constraintTop_toBottomOf="@id/textview4"
                app:layout_constraintLeft_toLeftOf="@id/textview4"/>

            <TextView
                android:id="@+id/tvMajor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@id/textview5"
                app:layout_constraintLeft_toLeftOf="@id/tvBirth"
                app:layout_constraintBottom_toBottomOf="@id/textview5" />

            <TextView
                android:id="@+id/textview6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:fontFamily="@font/notosanslight"
                app:layout_constraintTop_toBottomOf="@id/textview5"
                app:layout_constraintLeft_toLeftOf="@id/textview5"/>

            <TextView
                android:id="@+id/textview7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자리배치"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/notosans"
                app:layout_constraintTop_toBottomOf="@id/textview6"
                app:layout_constraintLeft_toLeftOf="@id/textview6"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="240dp"
                android:layout_height="216dp"
                android:backgroundTint="#535353"
                app:cardCornerRadius="12dp"
                app:layout_constraintTop_toBottomOf="@id/textview7"
                app:layout_constraintLeft_toLeftOf="@id/textview7">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/guideline"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/position1"
                        android:layout_width="32dp"
                        android:layout_height="24dp"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="4dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/position2"
                        android:layout_width="32dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="4dp"
                        app:layout_constraintTop_toTopOf="@id/position1"
                        app:layout_constraintLeft_toRightOf="@id/position1"
                        app:layout_constraintRight_toRightOf="@id/guideline"
                        app:layout_constraintBottom_toBottomOf="@id/position1" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/position3"
                        android:layout_width="32dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="10dp"
                        app:cardCornerRadius="4dp"
                        app:layout_constraintTop_toTopOf="@id/position4"
                        app:layout_constraintLeft_toLeftOf="@id/guideline"
                        app:layout_constraintRight_toLeftOf="@id/position4"
                        app:layout_constraintBottom_toBottomOf="@id/position4"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/position4"
                        android:layout_width="32dp"
                        android:layout_height="24dp"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="4dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/position5"
                        android:layout_width="32dp"
                        android:layout_height="24dp"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="4dp"
                        app:layout_constraintTop_toBottomOf="@id/position1"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/position6"
                        android:layout_width="32dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="4dp"
                        app:layout_constraintTop_toTopOf="@id/position5"
                        app:layout_constraintLeft_toRightOf="@id/position5"
                        app:layout_constraintRight_toRightOf="@id/guideline"
                        app:layout_constraintBottom_toBottomOf="@id/position5" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/position7"
                        android:layout_width="32dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="10dp"
                        app:cardCornerRadius="4dp"
                        app:layout_constraintTop_toTopOf="@id/position8"
                        app:layout_constraintLeft_toLeftOf="@id/guideline"
                        app:layout_constraintRight_toLeftOf="@id/position8"
                        app:layout_constraintBottom_toBottomOf="@id/position8"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/position8"
                        android:layout_width="32dp"
                        android:layout_height="24dp"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="4dp"
                        app:layout_constraintTop_toBottomOf="@id/position4"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/position9"
                        android:layout_width="32dp"
                        android:layout_height="24dp"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="4dp"
                        app:layout_constraintTop_toBottomOf="@id/position5"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/position10"
                        android:layout_width="32dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="4dp"
                        app:layout_constraintTop_toTopOf="@id/position9"
                        app:layout_constraintLeft_toRightOf="@id/position9"
                        app:layout_constraintRight_toRightOf="@id/guideline"
                        app:layout_constraintBottom_toBottomOf="@id/position9" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/position11"
                        android:layout_width="32dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="10dp"
                        app:cardCornerRadius="4dp"
                        app:layout_constraintTop_toTopOf="@id/position12"
                        app:layout_constraintLeft_toLeftOf="@id/guideline"
                        app:layout_constraintRight_toLeftOf="@id/position12"
                        app:layout_constraintBottom_toBottomOf="@id/position12"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/position12"
                        android:layout_width="32dp"
                        android:layout_height="24dp"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="4dp"
                        app:layout_constraintTop_toBottomOf="@id/position8"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/position13"
                        android:layout_width="32dp"
                        android:layout_height="24dp"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="4dp"
                        app:layout_constraintTop_toBottomOf="@id/position9"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/position14"
                        android:layout_width="32dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="4dp"
                        app:layout_constraintTop_toTopOf="@id/position13"
                        app:layout_constraintLeft_toRightOf="@id/position13"
                        app:layout_constraintRight_toRightOf="@id/guideline"
                        app:layout_constraintBottom_toBottomOf="@id/position13" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/position15"
                        android:layout_width="32dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="10dp"
                        app:cardCornerRadius="4dp"
                        app:layout_constraintTop_toTopOf="@id/position16"
                        app:layout_constraintLeft_toLeftOf="@id/guideline"
                        app:layout_constraintRight_toLeftOf="@id/position16"
                        app:layout_constraintBottom_toBottomOf="@id/position16"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/position16"
                        android:layout_width="32dp"
                        android:layout_height="24dp"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="4dp"
                        app:layout_constraintTop_toBottomOf="@id/position12"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/position17"
                        android:layout_width="32dp"
                        android:layout_height="24dp"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="4dp"
                        app:layout_constraintTop_toBottomOf="@id/position13"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/position18"
                        android:layout_width="32dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="4dp"
                        app:layout_constraintTop_toTopOf="@id/position17"
                        app:layout_constraintLeft_toRightOf="@id/position17"
                        app:layout_constraintRight_toRightOf="@id/guideline"
                        app:layout_constraintBottom_toBottomOf="@id/position17" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>